{
  "name": "andriilive/bedrock-extended",
  "type": "project",
  "license": "MIT",
  "description": "Wordpress Bedrock Starter Extended by useful configuration and scripts",
  "homepage": "https://github.com/roots/bedrock",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    },
    {
      "name": "Andrii Iv. (@digitalandyeu)",
      "email": "hi@digitalandy.eu",
      "homepage": "https://github.com/andriilive"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://pivvenit.github.io/acf-composer-bridge/composer/v3/wordpress-plugin"
    },
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.2",
    "vlucas/phpdotenv": "^5.5",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "6.3.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "wp-graphql/wp-graphql-acf": "^0.6.1",
    "wpackagist-theme/twentytwentythree": "^1.2",
    "wpackagist-plugin/wordpress-importer": "^0.8.1",
    "wpackagist-plugin/wp-gatsby": "^2.3",
    "wpackagist-plugin/wp-graphql": "^1.18",
    "wpackagist-plugin/acf-extended": "0.8.9.4",
    "aaemnnosttv/wp-cli-login-server": "^1.5",
    "lukasbesch/bedrock-plugin-disabler": "^1.4",
    "andriilive/wp-disable-generated-image-sizes": "dev-plugin",
    "andriilive/wp-acf-extended-config": "dev-plugin",
    "advanced-custom-fields/advanced-custom-fields-pro": "^6.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7.1",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^6.0"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true,
      "pivvenit/acf-pro-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "phpcs"
    ],
    "db:export": [
      "wp db export --add-drop-table .db/db.sql"
    ],
    "login": [
      "wp login create 1"
    ],
    "salts-shuffle": [
      "wp dotenv salts regenerate"
    ],
    "media-regenerate": [
      "wp media regenerate --yes"
    ],
    "log-empty": [
      "echo '' > web/app/debug.log"
    ],
    "db-create": [
      "wp db create",
      "wp db import .db/db.sql"
    ],
    "env-localhost": [
      "ln -s .env.example .env"
    ]
  }
}
